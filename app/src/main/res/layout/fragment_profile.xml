<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/phoneNumberPromptTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="Profile"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePhotoIV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginVertical="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_man"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumberPromptTV"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberPromptTV"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberPromptTV"
        app:shapeAppearanceOverlay="@style/RoundShapeAppearance" />


    <ImageView
        android:id="@+id/uploadIV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_camera"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/profilePhotoIV"
        app:layout_constraintEnd_toEndOf="@+id/profilePhotoIV"
        app:layout_constraintTop_toTopOf="@+id/profilePhotoIV" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoIV"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_details_bg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    android:paddingHorizontal="8dp"
                    tools:context=".ui.screens.TransactionDetailActivity">


                    <TextView
                        android:id="@+id/stationName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/vehicleColorLabelTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/vehicleColorLabelTV"
                        tools:text="Matte Black" />

                    <TextView
                        android:id="@+id/vehicleLicenseLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Vehicle License:"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/attendantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        app:layout_constraintBottom_toBottomOf="@+id/vehicleLicenseLabelTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/vehicleLicenseLabelTV"
                        tools:text="IMO511EU" />

                    <TextView
                        android:id="@+id/vehicleRegistrationLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Vehicle Registration:"
                        app:layout_constraintStart_toStartOf="@+id/vehicleLicenseLabelTV"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleLicenseLabelTV" />

                    <TextView
                        android:id="@+id/stationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/vehicleRegistrationLabelTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleLicenseLabelTV"
                        tools:text="AX364NJO" />

                    <TextView
                        android:id="@+id/vehicleColorLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Vehicle Color:"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/vehicleRegistrationLabelTV"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleRegistrationLabelTV" />

                    <TextView
                        android:id="@+id/lastPaymentDateLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:layout_marginBottom="32dp"
                        android:text="Last Payment Date:"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/vehicleColorLabelTV"
                        app:layout_constraintTop_toBottomOf="@+id/driverLabelTV" />

                    <TextView
                        android:id="@+id/authorizedVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        app:layout_constraintBottom_toBottomOf="@+id/lastPaymentDateLabelTV"
                        app:layout_constraintEnd_toEndOf="@+id/dispensedVolume"
                        app:layout_constraintTop_toTopOf="@+id/lastPaymentDateLabelTV"
                        tools:text="01/12/22" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/driverLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Driver"
                        app:layout_constraintStart_toStartOf="@+id/vehicleTypeLabelTV"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleTypeLabelTV" />

                    <TextView
                        android:id="@+id/dispensedVolume"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_semibold"
                        app:layout_constraintBottom_toBottomOf="@+id/driverLabelTV"
                        app:layout_constraintEnd_toEndOf="@+id/stationName2"
                        app:layout_constraintTop_toTopOf="@+id/driverLabelTV"
                        tools:text="Dipo" />

                    <TextView
                        android:id="@+id/vehicleTypeLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Vehicle Type"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/vehicleColorLabelTV"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleColorLabelTV" />

                    <TextView
                        android:id="@+id/transactionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        app:layout_constraintBottom_toBottomOf="@+id/vehicleTypeLabelTV"
                        app:layout_constraintEnd_toEndOf="@+id/stationName2"
                        app:layout_constraintTop_toTopOf="@+id/vehicleTypeLabelTV"
                        tools:text="Mercedes Benz"
                        android:maxLength="18"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/nunito_sans_semibold"
        android:padding="15dp"
        android:text="GENERATE LAST RECEIPT"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintStart_toStartOf="@+id/materialCardView"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/blue"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>